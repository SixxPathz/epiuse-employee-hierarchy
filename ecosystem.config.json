{
  "apps": [
    {
      "name": "epiuse-backend",
      "script": "dist/server.js",
      "cwd": "./apps/backend",
      "instances": 1,
      "exec_mode": "cluster",
      "env": {
        "NODE_ENV": "production",
        "PORT": 5000
      },
      "error_file": "./logs/backend-error.log",
      "out_file": "./logs/backend-out.log",
      "log_file": "./logs/backend-combined.log",
      "time": true,
      "max_restarts": 10,
      "min_uptime": "10s"
    },
    {
      "name": "epiuse-frontend",
      "script": "npm",
      "args": "start",
      "cwd": "./apps/frontend",
      "instances": 1,
      "exec_mode": "cluster",
      "env": {
        "NODE_ENV": "production",
        "PORT": 3000
      },
      "error_file": "./logs/frontend-error.log",
      "out_file": "./logs/frontend-out.log",
      "log_file": "./logs/frontend-combined.log",
      "time": true,
      "max_restarts": 10,
      "min_uptime": "10s"
    }
  ]
}